    "version": "0.2.0",
    "configurations": [
        {
            "name": "Meta Writer",
            "type": "debugpy",
            "request": "launch",
            "module": "odin_data.meta_writer.meta_writer_app",
            "args": [
                "--log-level=DEBUG"
            ]
        },
        {
            "name": "Odin Server",
            "type": "debugpy",
            "request": "launch",
            "module": "odin.main",
            "args": [
                "--config=${workspaceFolder}/python/odin_server.cfg",
                "--logging=DEBUG",
                "--access-logging=ERROR"
            ]
        }
    ]
}
